<?xml version="1.0" encoding="UTF-8"?>
<config>
	<modules>
		<Ccc_Vendor>
			<version>1.0.7</version>
		</Ccc_Vendor>
	</modules>
	
	<admin>
		<routers>
			<adminhtml>
				<args>
					<modules>
						<ccc_vendor>Ccc_Vendor_Adminhtml</ccc_vendor>
					</modules>
				</args>
			</adminhtml>
		</routers>
	</admin>

	
	<frontend>
		<events>
			<controller_action_layout_load_before>
				<observers>
					<vendor_is_logged_in_observer>
						<class>vendor/observer</class>
						<method>beforeLoadLayout</method>
					</vendor_is_logged_in_observer>
				</observers>
			</controller_action_layout_load_before>
		</events>
		<layout>
			<updates>
			  <vendor module="Ccc_vendor">
				<file>vendor.xml</file>
			  </vendor>
			</updates>
		  </layout>
		  <routers>
				<vendor>
					<use>standard</use>
					<args>
						<module>Ccc_Vendor</module>
						<frontName>vendor</frontName>
					</args>
				</vendor>
		</routers>
	</frontend>
	<global>
		
		<blocks>
			<page>
				<rewrite>
					<html_welcome>Ccc_Vendor_Block_Page_Html_Welcome</html_welcome>
				</rewrite>
			</page>
			<vendor>
				<class>Ccc_Vendor_Block</class>
			</vendor>
		</blocks>
		<helpers>
			<vendor>
				<class>Ccc_Vendor_Helper</class>
			</vendor>
		</helpers>
		<models>
	        <vendor>
	            <class>Ccc_Vendor_Model</class>
	            <resourceModel>vendor_resource</resourceModel>
	        </vendor>
	        <vendor_resource>
	            <class>Ccc_Vendor_Model_Resource</class>
	            <entities>
	                <vendor>
	                    <table>vendor</table>
	                </vendor>
	                <vendor_datetime>
	                	<table>vendor_datetime</table>
		            </vendor_datetime>
		            <vendor_decimal>
		                <table>vendor_decimal</table>
		            </vendor_decimal>
		            <vendor_int>
		                <table>vendor_int</table>
		            </vendor_int>
		            <vendor_text>
		                <table>vendor_text</table>
		            </vendor_text>
		            <vendor_varchar>
		                <table>vendor_varchar</table>
		            </vendor_varchar>
		            <vendor_char>
		                <table>vendor_char</table>
		            </vendor_char>
		            <eav_attribute>
                        <table>vendor_eav_attribute</table>
                    </eav_attribute>
					<product>
						<table>vendor_product_entities</table>
					</product>
					<product_attribute_group>
						<table>vendor_product_attribute_group</table>
					</product_attribute_group>
					<product_request>
						<table>vendor_product_request</table>
					</product_request>
		        </entities>
		    </vendor_resource>
		</models>
		<resources>
            <vendor_setup>
                <setup>
                    <module>Ccc_Vendor</module>
                    <class>Ccc_Vendor_Model_Resource_Setup</class>
                </setup>
            </vendor_setup>
        </resources>
	</global>

	<adminhtml>
	    <layout>
	      <updates>
	        <vendor>
	          <file>vendor.xml</file>
	        </vendor>
	      </updates>
	    </layout>
  	</adminhtml>
</config>
