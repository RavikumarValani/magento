<?xml version="1.0" encoding="UTF-8"?>
<config>
    <modules>
        <Ccc_Shipping>
            <version>1.0.0</version>
        </Ccc_Shipping>
    </modules>

    <default>
        <carriers>
            <expres>
                <active>1</active>
                <sallowspecific>0</sallowspecific>
                <model>ccc_shipping/method_expres</model>
                <name>expres</name>
                <price>5.00</price>
                <title>Expres</title>
                <type>I</type>
                <specificerrmsg>This shipping method is currently unavailable. If you would like to ship using this shipping method, please contact us.</specificerrmsg>
                <handling_type>F</handling_type>
            </expres>
        </carriers>
    </default>

    <global>
        <models>
            <ccc_shipping>
                <class>Ccc_Shipping_Model</class>
            </ccc_shipping>
        </models>
        <helpers>
            <ccc_shipping>
                <class>Ccc_Shipping_Helper</class>
            </ccc_shipping>
        </helpers>
    </global>
</config>