                    <block type="order/adminhtml_order_quote_totals" template="order/quote/totals.phtml" name="totals" />
                </block>
        </reference>
    </order_adminhtml_order_create_new>

    <order_adminhtml_order_index>
        <reference name="content">
            <block type="order/adminhtml_order" >
            </block>
        </reference>
    </order_adminhtml_order_index>

    <order_adminhtml_order_show>
        <reference name="content">
            <block type="order/adminhtml_order_show" template="order/show.phtml" name="show">
                <block type="order/adminhtml_order_show_details" template="order/show/details.phtml" name="details"></block>
