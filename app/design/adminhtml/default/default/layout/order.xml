                <block type="order/adminhtml_order_show_billing_method" template="order/show/billing/method.phtml" name="billing_method"></block>
                <block type="order/adminhtml_order_show_shipping_method" template="order/show/shipping/method.phtml" name="shipping_method"></block>
                <block type="order/adminhtml_order_show_items" template="order/show/items.phtml" name="items"></block>
                <block type="order/adminhtml_order_show_totals" template="order/show/totals.phtml" name="totals"></block>
